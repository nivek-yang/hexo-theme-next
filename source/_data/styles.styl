// 導覽列樣式
.main-menu {
  font-size: 100px;  // 加大字體大小
  margin: 0 20px;   // 增加間距

  .menu-item {
    margin: 0 15px;  // 增加選項間距
    padding: 8px 0;  // 增加上下內距
    position: relative;  // 添加相對定位

    a {
      font-weight: 500;  // 加粗字體
      transition: all 0.3s ease;  // 添加過渡效果
      display: block;  // 確保整個區域可點擊
    }
  }
}

// 標籤選單樣式
.menu-item-tags {
  position: relative;

  .menu-item-link {
    cursor: pointer;
    position: relative;
    padding-right: 20px;

    &::after {
      content: '▼';
      position: absolute;
      right: 5px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 12px;
      transition: transform 0.3s ease;
    }

    &.active::after {
      transform: translateY(-50%) rotate(180deg);
    }
  }

  .sub-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 200px;
    background: #fff;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    border-radius: 4px;
    padding: 10px 0;
    z-index: 100;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;

    &.active {
      display: block;
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .menu-item {
      margin: 0;
      padding: 8px 15px;
      white-space: nowrap;
      border-bottom: 1px solid #f0f0f0;

      &:last-child {
        border-bottom: none;
      }

      &:hover {
        background: #f5f5f5;
      }

      a {
        display: block;
        color: #333;
        font-size: 14px;
        text-decoration: none;

        &:hover {
          color: #2196F3;
        }
      }
    }
  }
} 