.menu {
  .main-menu {
    font-size: 1.5em;
    
  }
  .menu-item-tags {
    position: relative;

    .submenu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background: red;
      border: 1px solid #ddd;
      border-radius: 4px;
      padding: 10px;
      min-width: 150px;
      box-shadow: 0 2px 5px rgba(0,0,0, 1);
      z-index: 999;
      margin-top: 0;
    }

    &.active .submenu {
      display: block;
    }
  }
} 